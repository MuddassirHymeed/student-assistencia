<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Add Blogs</h1>
                    {{> home/formMsgs }}
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        {{!-- <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                        <li class="breadcrumb-item active">Blogs</li> --}}
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-md-6">
                    {{!-- {{universities}} --}}

                    <div class="card card-warning">
                        <div class="card-header">
                            <h3 class="card-title">All Blogs</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <table class="table table-sm table-striped table-bordered">
                                <thead>
                                <tr>
                                    {{!-- <th style="width: 10px">#</th> --}}
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#each blogs}}
                                    <tr>
                                        {{!-- <td>1.</td> --}}
                                        <td>{{title}}</td>
                                        <td>{{description}}</td>
                                        <td>{{image}}</td>
                                        <td><span class="badge bg-danger"><a href="/admin/blogs/delete/{{id}}">Delete</a></span></td>
                                        <td><span class="badge bg-success"><a href="/admin/blogs/edit/{{id}}">Edit</a></span></td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Add Blog</h3>

                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" action="/admin/blogs/addBlog" method="post" enctype="multipart/form-data">
                            <div class="card-body">
                                <input type="hidden" name="blog_id" value="{{blog._id}}">
                                <div class="form-group">
                                    <label for="title">Title</label>
                                    <input required type="text" class="form-control" id="title" placeholder="Enter Blog Title" name="title" value="{{blog.title}}">
                                </div>
                                <div class="form-group">
                                    <label for="description">Description</label>
                                    <input type="text" class="form-control" id="description" name="description" placeholder="Description" value="{{blog.description}}">
                                </div>
                                <div class="form-group">
                                    <label for="province">Image</label>
                                    <input type="file" class="form-control" id="image" name="blogImage" required>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>