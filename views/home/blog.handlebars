<!-- about -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img class="rounded-0" src="/uploads/images/blogs/{{blog.image}}" alt="Post thumb" style="width: 100%;
    height: 50vw;
    object-fit: cover;">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2>Description</h2>
